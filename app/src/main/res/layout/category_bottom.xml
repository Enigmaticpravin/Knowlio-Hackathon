<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/dialogContainer"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:backgroundTint="@color/background"
        android:background="@drawable/round_bg">

        <TextView
        android:id="@+id/replyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textColor="@color/black"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:drawableStart="@drawable/round_category_24"
        android:drawablePadding="@dimen/_7sdp"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Choose a category" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_bg"
            android:drawableEnd="@drawable/round_clear_24"
            android:drawableTint="@color/primaryRed"
            android:gravity="center"
            android:id="@+id/closeBtn"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Close"
            android:textColor="@color/primaryRed" />

        <LinearLayout
            android:id="@+id/checkBoxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/replyTxt"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/round_bg"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/technology"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radio_selectoredit"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Technology"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radio_selectoredit"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Education"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:id="@+id/politics"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radio_selectoredit"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Politics"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:id="@+id/religion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radio_selectoredit"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Religion"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:id="@+id/medication"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radio_selectoredit"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Medication"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:id="@+id/agriculture"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radio_selectoredit"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Agriculture"
                    android:textColor="@drawable/text_color" />

                <RadioButton
                    android:id="@+id/finance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/radio_selectoredit"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="Finance"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@drawable/text_color" />


            </RadioGroup>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>