<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/background"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/replyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawableStart="@drawable/baseline_attractions_24"
            android:drawablePadding="@dimen/_7sdp"
            android:gravity="center_vertical"
            android:drawableTint="@color/black"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="More Options" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/round_bg"
            android:drawableEnd="@drawable/round_close_24"
            android:drawableTint="@color/primaryRed"
            android:gravity="center"
            android:id="@+id/closeBtn"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Close"
            android:textColor="@color/primaryRed" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:drawableStart="@drawable/round_star_border_24"
        android:padding="@dimen/_10sdp"
        android:drawableTint="@color/black"
        android:visibility="gone"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:id="@+id/rateBtn"
        android:text="Feedback List"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:drawableStart="@drawable/outline_rule_24"
        android:padding="@dimen/_10sdp"
        android:drawableTint="@color/black"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:id="@+id/closeResponse"
        android:text="Community Guidelines"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:drawableStart="@drawable/outline_info_24"
        android:padding="@dimen/_10sdp"
        android:drawableTint="@color/black"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:id="@+id/reportBtn"
        android:text="About Knowlio"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:drawableStart="@drawable/round_logout_24"
        android:padding="@dimen/_10sdp"
        android:drawableTint="@color/primaryRed"
        android:id="@+id/deleteBtn"
        android:drawablePadding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:textColor="@color/primaryRed"
        android:text="Log out"/>


</LinearLayout>